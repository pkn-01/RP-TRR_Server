# S3 / MinIO configuration
# Set STORAGE_PROVIDER to 's3' to enable S3/MinIO usage. Otherwise local uploads/ will be used.
STORAGE_PROVIDER=s3
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=YOUR_ACCESS_KEY
S3_SECRET_ACCESS_KEY=YOUR_SECRET_KEY
# S3_ENDPOINT only needed for MinIO or custom endpoint, e.g. http://localhost:9000
S3_ENDPOINT=
# If using MinIO with path-style URLs, set true
S3_FORCE_PATH_STYLE=true
# Optional public url for building file URLs
S3_PUBLIC_URL=http://localhost:9000/your-bucket-name
# Enable periodic cleanup
ENABLE_CLEANUP=false
UPLOAD_RETENTION_DAYS=30
